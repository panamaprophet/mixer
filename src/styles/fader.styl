.fader
    background: #c4cace url('i/metal-texture-small.jpg')
    background-size: contain
    height: 100%
    text-align: center
    width: 20%

    &:not(:last-child)
        margin-right: 1px



.fader__placeholder
    height: calc(100% - 40px - 130px - 59px)
    margin-bottom: 34px



.fader__control

    position: relative
    height: 100%
    margin-top: 34px
    margin-bottom: 34px

    &:after
        content: ''
        position: absolute
        width: 10px
        top: 0
        bottom: 0
        left: 50%
        margin-left: -5px
        background: #555
        box-shadow: inset 0 0 10px #000

.fader__control-value
    position: absolute
    bottom: 0

    width: 30px
    height: 60px

    left: 50%
    margin-left: -15px

    /*cursor: pointer*/
    cursor: s-resize

    z-index: 10
    border-radius: 2px
    transform: translateY(50%)

    background: linear-gradient(to bottom, #999 0%, #eee 11%, #ccc 48.33%, #333 50%, #ccc 51.66%, #eee 88.33%, #999 100%)
    box-shadow: 0 4px 5px rgba(0,0,0,0.3), 0 2px 1px rgba(0,0,0,0.5)

.fader__control--horizontal
    height: auto
    width: 100%
    margin: 0
    padding: 0 15px

    -webkit-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    -o-user-select: none
    user-select: none

.fader__control--horizontal .fader__control-value

    width: 30px
    height: 15px
    left: auto
    margin: 0
    top: -3px

    transform: translateX(-50%)

    cursor: e-resize

    background: linear-gradient(to right, #999 0%, #eee 11%, #ccc 48.33%, #333 50%, #ccc 51.66%, #eee 88.33%, #999 100%)

.fader__control--horizontal:after
    width: 100%
    height: 10px
    left: 0
    margin: 0

.fader__control-value--animated
    transition: all 250ms ease-in-out



.fader__buttons
    text-align: center
    height: 30px
    line-height: 30px

.fader__button
    padding: 4px 8px
    background: #fff
    border: none
    cursor: pointer
    outline: none
    vertical-align: middle
    font-size: 0.8em

.fader__button--mute

.fader__button--reset



.fader__effect
    display: flex
    position: relative
    margin: 8px 8px 16px

.fader__effect-control
    left: 40px
    top: 0
    position: absolute
    width: 60px
    height: 20px

.fader__effect-title
    display: inline-block
    width: 42px
    flex-shrink: 0
    text-align: left

    color: #555
    text-shadow: 1px 1px 0 #eee
    font-weight: bold



.fader__title
    height: 30px
    line-height: 30px
    background: #333
    font-weight: bold
    color: #d3d3d3

.fader:first-child .fader__title
    border-radius: 0 0 0 4px

.fader:last-child .fader__title
    border-radius: 0 0 4px 0




.fader__effect-placeholder
    width: calc(100% - 36px)
    margin-left: 15px
    margin-right: 15px
    margin-top: 3px