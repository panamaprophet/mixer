*
    margin: 0
    padding: 0
    box-sizing: border-box

html
body
    width: 100%
    height: 100%

body
    font: normal 100% Helvetica, Arial, sans-serif
    padding-top: 20px
    background: #232323



.application
    padding: 8px
    background: #fff
    border-radius: 4px
    display: flex
    flex-flow: row nowrap
    justify-content: center
    align-items: flex-start
    max-width: 950px
    margin: 0 auto
    width: auto
    height: auto



.button
    transition: all 80ms ease-in-out
    box-shadow: inset 0 0 0 1px rgba(0,0,0, 0.2),
                inset 0 0 1px 2px rgba(255,255,255,0.9),
                inset 0 -6px 2px rgba(0,0,0,0.1),
                0 2px 2px rgba(0,0,0,0.3),
                0 1px 0px rgba(0,0,0,0.5)

    &:hover
        box-shadow: inset 0 0 0 1px rgba(0,0,0, 0.2),
                    inset 0 0 1px 2px rgba(255,255,255,0.9),
                    inset 0 -10px 5px rgba(0,0,0,0.1),
                    0 2px 2px rgba(0,0,0,0.3),
                    0 1px 0px rgba(0,0,0,0.5)

    &:active
        transform: translateY(1px)
        box-shadow: inset 0 0 0 1px rgba(0,0,0, 0.2),
                    inset 0 0 1px 2px rgba(255,255,255,0.9),
                    inset 0 -10px 5px rgba(0,0,0,0.1),
                    0 2px 2px rgba(0,0,0,0.3),
                    0 1px 0px rgba(0,0,0,0.5)

.button--pressed
    text-decoration: line-through
    color: #777

.button[disabled] .icon
    color: #ccc



.icon
    display: inline-block
    vertical-align: top
    margin-top: 3px
    margin-right: 4px
    width: 0
    height: 0
    color: #333

.icon--play
    border-top: 4px solid transparent
    border-left: 6px solid currentColor
    border-bottom: 4px solid transparent

.icon--pause
    height: 8px
    border-right: 2px solid currentColor
    border-left: 2px solid currentColor
    padding-left: 2px

.icon--rewind
    width: 0
    height: 0
    border: 4px solid transparent
    border-left: 5px solid
    transform: rotate(180deg)

.icon--rewind:before
    content: ''
    position: absolute
    left: 0
    top: -4px
    width: 0
    height: 0
    border: 4px solid transparent
    border-left: 5px solid



.input
    outline: none

.input--radio
    margin-top: 1px
    vertical-align: top



.credits
    display: flex
    justify-content: center
    align-items: center
    font-size: 0.8em
    margin-top: 16px

.credits__link
    color: #fff

    &:not(:last-child):after
        content: '|'
        opacity: 0.8
        margin: 0 8px
        display: inline-block
